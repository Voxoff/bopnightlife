<div class="container">
  <div class="row">
    <div class="offset-sm-3 col-sm-6 devise-form">
      <h2 class="mt-4">Log in</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, class: 'ml-1', as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in", class: 'btn btn-primary full-submit mb-5' %>
        </div>
      <% end %>
      <!-- No need for links without users -->
      <%#= render "devise/shared/links" %>
    </div>
    <div class="col-sm-3"></div>
  </div>
</div>
