<!-- Invisibles are to center logo regardless of sign in status -->
<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="invisible"></div>
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "logo.png" %>
    <% end %>

  <% if user_signed_in? %>
    <%= image_tag "logo.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
      <%= link_to "Admin Page", admin_dashboard_path, class: "dropdown-item" %>
      <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
    </div>
  <% else %>
    <div class="invisible"></div>
  <% end %>
</div>
